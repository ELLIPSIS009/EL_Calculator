<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:background="#010101"
        android:columnCount="4">


        <Button
            android:id="@+id/his"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="⟲"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/erase"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="⌫"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            />


        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="25sp"
            android:textColor="@color/orange"
            android:background="@drawable/button_format"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/bracket"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/button_format"
            android:text="( )"
            android:textColor="@color/green"
            android:textSize="25sp" />
        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="%"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:background="@drawable/button_format"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/devide"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="÷"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:background="@drawable/button_format"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            />


        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="X"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:background="@drawable/button_format"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            />


        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:background="@drawable/button_format"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:background="@drawable/button_format"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="+/-"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="."
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_format"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="="
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/button_equal"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnWeight="1"
            />


    </GridLayout>
</LinearLayout>